<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>ADA Finance</title>
    <link rel="stylesheet" href="static/screener.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <link rel="icon" type="image/x-icon" href="/static/favicon.ico">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js"></script>
</head>
<body>
    <nav>
        <div class="logo">ADA Finance</div>
        <input type="checkbox" id="checkbox">
        <ul>
            <li><a href=".">Home</a></li>
            <li><a href="forecast">Price Prediction</a></li>
            <li><a href="screener" class="active">Stock Screener</a></li>
        </ul>
    </nav>
    <main id="homeheader">
        <table id="results_table">
            <tr>
                <th>Name</th>
                <th>Ticker</th>
                <th>Price</th>
                <th>Industry</th>
                <th>Market Cap</th>
                {% for criteria_name in items %}
                    <th>{{translations[criteria_name]}}</th>
                {% endfor %}
            </tr>
            {% for stock in matches %}
            <tr>
                <td>{{stock.name}}</td>
                <td>{{stock.symbol}}</td>
                <td>{{stock.price}}</td>
                <td>{{stock.industry}}</td>
                <td>{{stock.market_cap}}</td>
                {% for criteria_name in items %}
                    <td>{{stock.metrics[criteria_name]}}</td>
                {% endfor %}
            </tr>
            {% endfor %}
        </table>
    </main>
</body>
