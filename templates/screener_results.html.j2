{% extends "base.html.j2" %}
{% block styling %}
    <link rel="stylesheet" href="static/screener.css">
    <link rel="stylesheet" href="static/screener_results.css">
    <script src="static/scroll.js"></script>
{% endblock %}
{% block body %}
    <header id = "header">
        <img class="logo" src="static/Black Logo.png" alt="logo" width="250">
        <ul>
            <li><a href=".">Home</a></li>
            <li><a href="forecast">Price Prediction</a></li>
            <li><a href="screener" class="active">Stock Screener</a></li>
        </ul>
    </header>
    <div class="emptyspace"></div>
    <main id="homeheader">
        <table id="results_table" style="width:200px">
            <tr>
                <th>Name</th>
                <th>Ticker</th>
                <th>Price</th>
                <th>Industry</th>
                <th>Market Cap</th>
                {% for criteria_name in items %}
                    <th>{{names[criteria_name]}}</th>
                {% endfor %}
            </tr>
            {% for stock in matches %}
            <tr>
                <td>{{stock.name}}</td>
                <td id="ticker" style="color:#3282df">{{stock.symbol}}</td>
                <td>{{stock.price}}</td>
                <td>{{stock.industry}}</td>
                <td>{{stock.market_cap}}</td>
                {% for criteria_name in items %}
                    <td>{{stock.metrics[criteria_name]}}</td>
                {% endfor %}
            </tr>
            {% endfor %}
        </table>
    </main>
{% endblock %}